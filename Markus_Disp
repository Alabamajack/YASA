#include "kernel.h"
#include "kernel_id.h"
#include "ecrobot_interface.h"

DeclareTask(Disp);

DeclareEvent(evt_disp);
int message = 0; // 0 keine Nachricht, 1 Schiessen, 2 Warten, 3 keine Munition

void myPrintln(const char *s)
{
	static int y = 0;
	display_goto_xy(0,y);
	display_string(s);
	display_update();
	y++;
}

TASK(Disp)
{

	while(true)
	{
		WaitEvent(evt_disp);
		ClearEvent(evt_disp);
		
		switch(message) {

		case 1: myPrintln("Es wird geschossen");
		case 2: myPrintln("Warte auf neue Anweisung");
		case 3: myPrintln("Bitte nachf√ºllen");
		default: 
		}
			
	}
	TerminateTask();
}
