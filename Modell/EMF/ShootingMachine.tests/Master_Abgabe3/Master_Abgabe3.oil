#include "implementation.oil"

CPU ATMEL_AT91SAM7S256
{
	OS LEJOS_OSEK
	{
		STATUS = EXTENDED;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;
	};

	APPMODE LEGOSAR{};

	TASK Manager
	{
		AUTOSTART = TRUE
		{
			APPMODE = LEGOSAR;
		};
		PRIORITY = 1;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 512;
		EVENT = RTE_Manager_Input_GetValue_Event_In_EVENT;
		EVENT = RTE_Manager_StopSensor_GetValue_Event_In_EVENT;
	};

	TASK Motor_Output
	{
		AUTOSTART = TRUE
		{
			APPMODE = LEGOSAR;
		};
		PRIORITY = 2;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 512;
		EVENT = RTE_Output_Manager_GetValue_Receiver_In_EVENT;
	};

	TASK StopSensor_Task
	{
		AUTOSTART = FALSE;
		PRIORITY = 5;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 512;
	};

	TASK InitHook
	{
		AUTOSTART = TRUE
		{
			APPMODE = LEGOSAR;
		};
		PRIORITY = 10;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 512;
	};

	TASK TASK_BT_INTERFACE_READER
	{
		AUTOSTART = TRUE
		{
			APPMODE = LEGOSAR;
		};
		PRIORITY = 7;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 512;
		EVENT = BT_HAS_RECEIVED_PACKAGE;
	};

	TASK TASK_BT_INTERFACE_WRITER
	{
		AUTOSTART = TRUE
		{
			APPMODE = LEGOSAR;
		};
		PRIORITY = 7;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 512;
		EVENT = RTE_DisplayOutput_Manager_GetValue_Event_In_EVENT;
	};

	TASK BT_IMPLIZIT_MASTER
	{
		AUTOSTART = TRUE
		{
			APPMODE = LEGOSAR;
		};
		PRIORITY = 9;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 512;
		EVENT = BT_SEND_MY_MESSAGE;
	};

	TASK BT_IMPLIZIT_MASTER2
	{
		AUTOSTART = TRUE
		{
			APPMODE = LEGOSAR;
		};
		PRIORITY = 7;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 512;
		EVENT = BT_IMPLIZIT_MASTER2_EVENT;
	};

	ALARM StopSensor_Alarm
	{
		COUNTER = C_StopSensor_Alarm;
		ACTION = ACTIVATETASK
		{
			TASK = StopSensor_Task;
		};
		AUTOSTART = TRUE
		{
			ALARMTIME = 100;
			CYCLETIME = 100;
			APPMODE = LEGOSAR;
		};
	};

	COUNTER C_StopSensor_Alarm
	{
		MINCYCLE = 1;
		MAXALLOWEDVALUE = 100;
		TICKSPERBASE = 1;
	};

	EVENT BT_HAS_RECEIVED_PACKAGE
	{
		MASK = AUTO;
	};

	EVENT BT_SEND_MY_MESSAGE
	{
		MASK = AUTO;
	};

	EVENT RTE_Manager_Input_GetValue_Event_In_EVENT
	{
		MASK = AUTO;
	};

	EVENT RTE_Manager_StopSensor_GetValue_Event_In_EVENT
	{
		MASK = AUTO;
	};

	EVENT RTE_Output_Manager_GetValue_Receiver_In_EVENT
	{
		MASK = AUTO;
	};

	EVENT RTE_DisplayOutput_Manager_GetValue_Event_In_EVENT
	{
		MASK = AUTO;
	};

	EVENT BT_IMPLIZIT_MASTER2_EVENT
	{
		MASK = AUTO;
	};

};